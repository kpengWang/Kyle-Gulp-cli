{{!--
 语法：{{}} 是输出, # 符号是循环， ../ 的意思是返回上一层的作用域链
--}}

{{#extend "scss"}}
{{#content "sprites"}}
{{#each sprites}}
@mixin sprite-{{name}} {
    background-position: {{offset_x}}px {{offset_y}}px;
}

{{/each}}
{{/content}}
{{#content "spritesheet"}}
.sprite {
    background-image: url('../imgs/{{{spritesheet.escaped_image}}}');
    background-repeat: no-repeat;
    background-size: {{spritesheet.width}}px {{spritesheet.height}}px;
}
{{/content}}
{{/extend}}